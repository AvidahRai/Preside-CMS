<?xml version="1.0" encoding="UTF-8"?>
<form>
	<tab>
		<fieldset>
			<field name="asset"          control="assetPicker" required="true"  label="cms:ckeditor.imagepicker.asset.label" allowedTypes="image" />
			<field name="alt_text"       control="textinput"   required="true"  label="cms:ckeditor.imagepicker.alt_text.label" maxLength="200" />
			<field name="width"          control="spinner"     required="true"  label="cms:ckeditor.imagepicker.width.label" />
			<field name="height"         control="spinner"     required="true"  label="cms:ckeditor.imagepicker.height.label" />
			<field name="maintain_ratio" control="yesNoSwitch" required="true"  label="cms:ckeditor.imagepicker.maintain_ratio.label" />
			<field name="alignment"      control="select"      required="false" label="cms:ckeditor.imagepicker.alignment.label" values="auto,left,right" labels="cms:ckeditor.imagepicker.alignment.auto,cms:ckeditor.imagepicker.alignment.left,cms:ckeditor.imagepicker.alignment.right" />
		</fieldset>
	</tab>
</form>